<p id="notice"><%= notice %></p>

<h1>今週の寮食</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>昼食</th>
      <th>昼食（麺）</th>
      <th>夕食</th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <th><%= menu.day.strftime("%m月 %d日") %></th>
        <td><pre><%= menu.lunch1 %></pre></td>
        <td><pre><%= menu.lunch2 %></pre></td>
        <td><pre><%= menu.dinner %></pre></td>
      </tr>
    <% end %>
  </tbody>
</table>
